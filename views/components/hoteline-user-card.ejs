<div class="col_4">
    <div class="user_card">
        <div class="staus <%=status%>">
            <span><%=status%></span>
        </div>

        <div class="user_image">
            <img src=' /<%=profile_photo %> '
             onerror="this.src='/images/man.png';this.onerror='';"alt="">
        </div>

        <div class="detail">
            <h4 class="hotline-title-text"><%=first_name%> <%=last_name%></h4>
            <p class="hotline-detail-text">Jr. Software Developer</p>
        </div>

        <div class="info">
            <div class="top">
                <div>
                    <label for="">Departement</label>
                    <p>Development</p>
                </div>

                <div>
                    <label for="">Date Hired</label>
                    <p>20-02-2023</p>
                </div>
                
            </div>

            <p> <i class="fa-sharp fa-solid fa-envelope"> </i><%=email%> </p>
            <p><i class="fa-solid fa-phone"></i><%=phone_number %></p>
        </div>
    </div>
</div>